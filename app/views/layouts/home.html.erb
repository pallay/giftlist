			</div> <!-- end div#left-column -->
			<div id="middle-column" class="front">
				<%#= link_to image_tag("/images/photos/jaharul_sis1_r1_c1.jpg", :alt => 'Front picture large', :width => "260px", :title => "The Gift that every beautiful Bride wants"), :class => "lWOn", :rel => "lightbox" %>
				<a href="/images/photos/jaharul_sis1_r1_c1.jpg" class="lWOn" title="my caption"><img src="/images/photos/jaharul_sis1_r1_c1.jpg" alt ="" width="260"/></a>
			</div> <!-- end div#middle-column -->
			<div id="right-column">
				<div id="search-box">
					<%= render :partial => 'layouts/partials/notice' %>
					<h3>Search for a Gift List</h3>
					<div id="customer-number-search" class="search">
						<%= render :partial => 'layouts/partials/customer_number_search' %>
					</div>
					<p class="advanced-search-text">If you do not know the Wedding Gift List number use the advanced search.</p>
					<a href="#" onclick="Effect.BlindDown('advanced-search'); return false;">
					 	<%= image_tag("/images/buttons/template-new-cutting_r4_c2.jpg", {:title => 'Click here if you do not know the Gift List Number', :height => '15px'}) %>
				  </a>
					<div id="advanced-search" class="search" style="display: none;">
						<%= render :partial => 'layouts/partials/advanced_search' %>
					</div>
				</div>
				<br/>
				<div class="thinny">
					<h3>Gifts you will LOVE!</h3>
					<p><%= truncate('We do not routinely disclose our sources to protect the source of any information we receive before disclosing intelligence to our partners (for example, the police, local authorities or other government departments). However, we cannot guarantee the confidentiality of any information provided to us where there are legal, regulatory or operational reasons for disclosure.', 325) %> <%= link_to 'more' %></p>
				</div> <!-- end div#thinny -->
				<div id="tag">
					<%= render :partial => 'layouts/partials/tag' %>
				</div> <!-- end div#tag -->
			</div> <!-- end div#right-column -->
			<div class="breaker"></div>
		</div> <!-- end div#page -->
  	<div class="breaker"></div>
		<div id="more-links" class="front">
			<div class="container">
				<ul>
       		<li><div class="left"></div><%= link_to 'Home', root_url %><div class="right"></div></li>
          <li><div class="left"></div><%= link_to 'Log In', login_url %><div class="right"></div></li>
          <li><div class="left"></div><%= link_to 'Log Out', logout_url %><div class="right"></div></li>
          <li><div class="left"></div><%= link_to 'Search', giftlists_url %><div class="right"></div></li>
          <li><div class="left"></div><%= link_to 'And another link' %><div class="right"></div></li>
				</ul>
			</div> <!-- end div#container -->
		</div> <!-- end div#more-links -->
		<div id="bottom-section">
			<div id="wrapper">
				<div id="latest-weddings">
					<%= render :partial => 'layouts/partials/recently_joined_customers' %>
