<% form_tag ({:controller => 'giftlists', :action => 'new'}) do %>
	<%= image_tag "/images/misc/template-new-cutting2_04.gif", :align => "left" %>
	<%= text_field_tag :search, params[:search], :id => 'product-search-box', :class => "text", :value => "Search for a Product or type in a Keyword", :onfocus => "this.value = '';", :onblur => "this.value = this.value || this.defaultValue;" %>
	<%#= text_field_with_auto_complete :product, :name %>
	<%= image_submit_tag "/images/buttons/button-search.gif", :alt => 'search image', :title => 'Click here to search for a Product', :width => '73', :height => '29', :align => 'absmiddle' %>
  <br/><br/>
<% end %>
