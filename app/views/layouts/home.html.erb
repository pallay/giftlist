<body>
	
<div id="top-section">
	<div id="main-menu">
		<ul>
			<li><%= link_to 'Log In', login_path, :class => 'login' %></li>
			<li><%= link_to 'About us', about_path %></li>
			<li><%= link_to 'Contact us', contact_path %></li>
		</ul>
	</div> <!-- end div#main-menu -->
	<div id="aesthetic"><!-- FOR border -->
		<div id="header">
			<h1><span>Shaadi Gift List</span></h1>
			<%= link_to root_url %>			
		</div> <!-- end div#header -->
		<div id="page">		
			<div id="left-column" class="front">
				<%= link_to(image_tag("/images/misc/template-new-cutting_08.jpg", {:alt => "Sign up now!", :width => "174", :height => "98"}), new_giftlist_path) %>
